<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/material_standard_horizontal_spacing"
    android:minHeight="@dimen/material_list_item_height_no_detail">


<CheckedTextView
    android:id="@+id/item_output_name"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textSize="@dimen/material_font_style_size_subheading"
    android:textColor="?attr/app_color_on_content"
    android:gravity="center"
    android:checkMark="?android:attr/listChoiceIndicatorMultiple"
    android:textAppearance="?attr/app_text_list_title" />
</LinearLayout>